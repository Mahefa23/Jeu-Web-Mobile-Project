{% extends 'base.html.twig' %}

{% block title %}Gestion des Ingrédients{% endblock %}

{% block body %}
    <div class="container">
        <h1>Gestion des Ingrédients</h1>

        <a href="{{ path('ingredient_new') }}" class="btn btn-primary">Ajouter un Ingrédient</a>

        <table class="table mt-4">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Stock</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for ingredient in ingredients %}
                    <tr>
                        <td>{{ ingredient.id }}</td>
                        <td>{{ ingredient.name }}</td>
                        <td>{{ ingredient.stock }}</td>
                        <td>
                            <a href="{{ path('ingredient_edit', {'id': ingredient.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            <a href="{{ path('ingredient_delete', {'id': ingredient.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet ingrédient ?')">Supprimer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun ingrédient trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
